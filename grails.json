{
    "commands": [
        {
            "name":         "clean",
            "command":      "grails clean",
            "description":  "Clean grails web project",
            "type":         "grails"
        },
        {
            "name":         "run application",
            "command":      "grails run-app",
            "description":  "Start grails web project",
            "type":         "grails"
        },
        {
            "name":         "run war",
            "command":      "grails run-war",
            "description":  "Start grails web project from war",
            "type":         "grails"
        },
        {
            "name":         "dependency report",
            "command":      "grails dependency-report",
            "description":  "TRun ivy dependency report",
            "type":         "grails"
        },
        {
            "name":         "run all tests",
            "command":      "grails test-app -clean",
            "description":  "Test grails web project",
            "type":         "grails"
        },
        {
            "name":         "run integration tests",
            "command":      "grails test-app -integration -clean",
            "description":  "Run environment integration tests",
            "type":         "grails"
        },
        {
            "name":         "run unit tests",
            "command":      "grails test-app -unit -clean",
            "description":  "Run JUnit tests",
            "type":         "grails"
        },
        {
            "name":         "run features",
            "command":      "grails cucumber run-app",
            "description":  "Run cucumber features (requires features plugin)",
            "type":         "grails"
        },
        {
            "name":         "create war",
            "command":      "grails war",
            "description":  "Create deployable war",
            "type":         "grails"
        }
    ],
    "file_runners":[
        {
            "regex":        ".*.groovy",
            "name":         "Run as groovy",
            "command":      "groovy __PATH__",
            "type":         "script/groovy"
        },
        {
            "regex":        ".*.java",
            "name":         "Run as java",
            "command":      "java __PATH__",
            "type":         "java"
        }
    ]
}