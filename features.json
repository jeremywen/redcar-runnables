{
    "commands":[
        {
            "name": "Full suite",
            "command": "jruby -S rake",
            "description": "Run the full test suite",
            "type": "rake"
        },
        {
            "name": "Run feature set",
            "command": "jruby -S bin/cucumber __PARAMS__",
            "description": "Choose a set of features to run",
            "type": "feature"
        }
    ],
    "file_runners":[
        {
            "regex": ".*\\.feature",
            "name": "Run as feature",
            "command": "jruby -S bin/cucumber __PATH__",
            "type": "test/ruby/feature"
        },
        {
            "regex": ".*_spec\\.rb",
            "name": "Run a spec",
            "command": "jruby -S spec __PATH__",
            "type": "test/ruby/spec"
        }
    ]
}
